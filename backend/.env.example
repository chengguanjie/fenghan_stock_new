# 数据库配置
# 格式：mysql://用户名:密码@主机:端口/数据库名
DATABASE_URL="mysql://root:password@localhost:3306/stock_deck"

# JWT 配置 - 访问令牌
JWT_ACCESS_SECRET="your-access-token-secret-key-change-this-to-a-strong-random-string-min-32-chars"
JWT_ACCESS_EXPIRY="2h"

# JWT 配置 - 刷新令牌
JWT_REFRESH_SECRET="your-refresh-token-secret-key-change-this-to-a-strong-random-string-min-32-chars"
JWT_REFRESH_EXPIRY="7d"

# 服务器配置
PORT=8080
NODE_ENV="development"

# 管理员初始化密钥（与前端保持一致）
ADMIN_INIT_KEY="your-secret-key-here"

# CORS 配置（允许的前端地址，逗号分隔）
ALLOWED_ORIGINS="http://localhost:5173,http://localhost:3000"
